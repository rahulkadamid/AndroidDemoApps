<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listrow">

    <android.support.v7.widget.CardView
        app:cardCornerRadius ="10dp"
        app:cardElevation ="10dp"
        app:cardUseCompatPadding ="true"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content">
        <LinearLayout
            android:orientation ="horizontal"
            android:layout_width ="match_parent"
            android:layout_height ="match_parent"
            android:id="@+id/cardview"
            android:background="#f5ee88">
            <ImageView
                app:srcCompat="@drawable/fc"
                android:id="@+id/cardview_imageview"
                android:layout_height="100dp"
                android:layout_width="72dp" />
            <LinearLayout
                android:orientation ="vertical"
                android:layout_width ="253dp"
                android:layout_height ="match_parent">

                <TextView
                    android:id="@+id/cardview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="TextView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardview_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:orientation ="vertical"
                android:layout_width ="253dp"
                android:layout_height ="match_parent">
            <ImageView
                app:srcCompat="@drawable/overflow_image"
                android:id="@+id/cardview_overflow"
                android:layout_height="30dp"
                android:layout_width="30dp" />
                <CheckBox
                    android:text=""
                    android:id="@+id/cardview_checkBox"
                    android:layout_weight ="1"
                    android:layout_width = "wrap_content"
                    android:layout_height ="wrap_content"
                    android:gravity="center_vertical|end" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>