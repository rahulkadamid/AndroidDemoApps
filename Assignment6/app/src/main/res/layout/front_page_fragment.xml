<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frontpagefragment"
    android:background="@color/frontPage">

    <TextView
        android:id="@+id/andro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:text="Android Programming"
        android:textAlignment="center"
        android:layout_above="@+id/imgvi1"
        android:layout_centerHorizontal="true" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/imgvi1"
        android:src="@drawable/frontpage_pic"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/andro"
        android:layout_alignEnd="@+id/andro" />


</RelativeLayout>
